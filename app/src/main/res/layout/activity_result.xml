<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resultActivity"
    android:background="@color/green_light">
    <TextView
        android:id="@+id/resultHead"
        style="@style/headStyle"
        android:text="@string/resultHead"
        />

    <TextView
        android:id="@+id/resultBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultHead"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/mplus1p_regular"
        android:gravity="center"
        android:text="@string/resultBody"
        android:textColor="@color/black"
        android:textSize="28sp" />
    <TextView
        android:id="@+id/calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultBody"
        android:layout_marginTop="16dp"
        android:text="@string/calories"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center"
        android:fontFamily="@font/mplus1p_regular"/>

    <TextView
        android:id="@+id/caloriesNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calories"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/mplus1p_medium"
        android:gravity="center"
        android:text="@string/caloriesNum"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/proteins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/fats"
        android:layout_below="@id/caloriesNum"
        android:layout_marginTop="32dp"
        android:text="@string/proteins"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center"
        android:fontFamily="@font/mplus1p_regular"/>
    <TextView
        android:id="@+id/fats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/caloriesNum"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:text="@string/fats"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/mplus1p_regular"/>
    <TextView
        android:id="@+id/carbohydrates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/fats"
        android:layout_below="@id/caloriesNum"
        android:layout_marginTop="32dp"
        android:text="@string/carbohydrates"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"
        android:fontFamily="@font/mplus1p_regular"/>
    <TextView
        android:id="@+id/proteinsNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/fatsNum"
        android:layout_below="@id/proteins"
        android:layout_marginTop="16dp"
        android:text="@string/proteinsNum"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center"
        android:fontFamily="@font/mplus1p_medium"/>
    <TextView
        android:id="@+id/fatsNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fats"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="@string/fatsNum"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/mplus1p_medium"/>
    <TextView
        android:id="@+id/carbohydratesNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/fatsNum"
        android:layout_below="@id/carbohydrates"
        android:layout_marginTop="16dp"
        android:text="@string/carbohydratesNum"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"
        android:fontFamily="@font/mplus1p_medium"/>
    <TextView
        android:id="@+id/glasses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fatsNum"
        android:layout_marginTop="32dp"
        android:text="@string/glasses"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"
        android:fontFamily="@font/mplus1p_regular"/>
    <TextView
        android:id="@+id/glassesNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/glasses"
        android:layout_marginTop="16dp"
        android:text="@string/glassesNum"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"
        android:fontFamily="@font/mplus1p_medium"/>
    <com.google.android.material.button.MaterialButton
        style="@style/buttonStyle"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:cornerRadius="45dp"
        app:strokeWidth="1dp"/>


</RelativeLayout>